CC=@CC@
FLAGS=@FLAGS@
LIBS=@LIBS@
EXEC_NAME=beep
INSTALL_DIR=@PREFIX@/bin
MAN_FILE=beep.1.gz
MAN_DIR=@PREFIX@/share/man/man1

default : beep

clean :
	rm ${EXEC_NAME}

beep : beep.c
	${CC} ${FLAGS} -o ${EXEC_NAME} beep.c ${LIBS}

install :
	cp ${EXEC_NAME} ${INSTALL_DIR}
	# rm -f /usr/man/man1/beep.1.bz2
	cp ${MAN_FILE} ${MAN_DIR}
